<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Current Courses</title>
</head>
<body>
  
  <main>
    <h1>Current Courses</h1>
<nav>
  <ul>
    <li><a href="/courses/new">ADD COURSE</a></li>
    <li><a href="/courses">ALL COURSES</a></li>
    <li><a href="/locations/new">ADD LOCATION</a></li>
    <li><a href="/logout">Log Out</a></li>
    <li><a href="/auth/google">Log In With Google</a></li>
  </ul>
</nav>
<table>
    <thead>
      <tr>
        <th>Course Title</th>
        <th>Day of the Week</th>
        <th>Number of Weeks</th>
        <th>Course Number</th>
        <th>Start Date</th>
      </tr>
    </thead>
    <tbody>
      <% courses.forEach( (c) => { %>
        <tr>
          <td><%= c.title %></td>
          <td><%= c.dayOfWeek %></td>
          <td><%= c.noOfWeeks %></td>
          <td><%= c.courseNo %></td>
          <td><%= c.startDate %></td>
          <td><a href="/courses/show/<%= c._id %>">DETAILS</a></td>
          <td>
          <form action="/courses/<%= c._id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
        </td>
        </tr>
      <% }); %>
    </tbody>
  </table>







<%- include('../partials/footer') %>