<%- include('../partials/header') %>
<nav>
  
  <a href="/courses/new" <%- title === 'Add Course' ? 'class="active"' : '' %>>ADD COURSE</a>
  <a href="/courses" <%- title === 'All Courses' ? 'class="active"' : '' %>>ALL COURSES</a>
  <a href="/locations/new" <%- title === 'Add Location' ? 'class="active"' : '' %>>ADD LOCATION</a>
  <a href="/logout">Log Out</a>
</nav>
<table>
    <thead>
      <tr>
        <th>Course Title</th>
        <th>Day of the Week</th>
        <th>Number of Weeks</th>
        <th>Course Number</th>
        <th>Start Date</th>
      </tr>
    </thead>
    <tbody>
      <% courses.forEach( (c) => { %>
        <tr>
          <td><%= c.title %></td>
          <td><%= c.dayOfWeek %></td>
          <td><%= c.noOfWeeks %></td>
          <td><%= c.courseNo %></td>
          <td><%= c.startDate %></td>
          <td><a href="/courses/show/<%= c._id %>">DETAILS</a></td>
          <td>
          <form action="/courses/<%= c._id %>?_method=DELETE"
            class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
        </td>
        </tr>
      <% }); %>
    </tbody>
  </table>







<%- include('../partials/footer') %>